# PostgreSQL Configuration
# Option A: Connection string (recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/sprechtag

# Option B: Individual parameters (used if DATABASE_URL is not set)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=sprechtag
# DB_USER=postgres
# DB_PASSWORD=your_password_here
# DB_SSL=false

# Server Configuration
PORT=4000

# Session Secret (change in production!)
SESSION_SECRET=your_secret_session_key_here

# Public Base URL for links in emails (frontend URL)
